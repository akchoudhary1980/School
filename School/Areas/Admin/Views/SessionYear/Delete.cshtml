@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model School.Areas.Admin.Models.SessionYearModel
@using School.Areas.Admin.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<partial name="_Breadcrumb" , model="new BreadcrumbView{PageTitle = @ViewData["PageTitle"].ToString(), ControllerName = @ViewData["ControllerName"].ToString()}" />

<div class="card card-outline card-danger">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-9">
                <h6>@ViewData["PageName"]</h6>
            </div>
            <div class="col-sm-3">
                <a asp-action="Index" class="btn btn-outline-info  float-right"><i class="fas fa-chevron-circle-left"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form class="swa-confirm" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SessionYearID" />
            <input type="hidden" id="confirm" name="confirm" value="No" />

            <div class="form-group row">
                <label asp-for="SessionYearName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="SessionYearName" class="form-control" />
                    <span asp-validation-for="SessionYearName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="SessionYearRemark" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="SessionYearRemark" class="form-control"></textarea>
                    <span asp-validation-for="SessionYearRemark" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" id="btn_submit" class="btn btn-outline-danger float-right" on><i class="fas fa-window-close"></i> Delete</button>
                </div>
            </div>

        </form>
    </div>
    <div class="card-footer">
        <p>Use <i style="color:blue" class="fas fa-plus-square"></i> for Insert Record, <i style="color:green" class="fas fa-edit"></i> for Update Record and <i style="color:red" class="fas fa-window-close"></i> for Delete Record </p>
    </div>
</div>
<!-- Default card end -->
