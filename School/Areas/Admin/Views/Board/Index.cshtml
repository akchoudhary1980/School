@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model IEnumerable<School.Areas.Admin.Models.BoardModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-areas="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active"><a asp-areas="Admin" asp-controller="Board" asp-action="Index"> @ViewData["PageTitle"] </a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>



<!-- general form elements -->
<div class="card card-outline card-primary">
    <div class="card-header">
        <h5>Form Title</h5>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-6">
                    <h4>@ViewData["PageTitle"]</h4>
                </div>
                <div class="col-sm-6">
                    <a asp-action="Create" class="btn btn-outline-success float-right"><i class="fas fa-plus-square"></i> Add</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class='dt-responsive table-responsive'>
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Board Name</th>
                                    <th>Board Description</th>
                                    <th>Edit</th>
                                    <th>Del</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{count++;} @count</td>
                                        <td>@item.BoardName</td>
                                        <td>@item.BoardDescription</td>
                                        <td><a asp-action="Edit" asp-route-id="@item.BoardID" class="btn btn-xs btn-outline-success"><i class="fas fa-edit"></i></a></td>
                                        <td><a asp-action="Delete" asp-route-id="@item.BoardID" class="btn btn-xs btn-outline-danger"><i class="fas fa-window-close"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @*<button type="submit" class="btn btn-primary">Submit</button>*@
        </div>
    </form>
</div>
<!-- /.card -->
