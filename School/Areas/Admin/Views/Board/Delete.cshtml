@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model School.Areas.Admin.Models.BoardModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-areas="Admin" asp-controller="Dashboard" asp-action="Index"> Home</a></li>
                    <li class="breadcrumb-item active"><a asp-areas="Admin" asp-controller="Board" asp-action="Index"> @ViewData["PageTitle"] </a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-9">
                        <h5>@ViewData["PageTitle"]</h5>
                    </div>
                    <div class="col-sm-3">
                        <a asp-action="Index" class="btn btn-outline-warning  float-right"><i class="fas fa-chevron-circle-left"></i> Back</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form class="swa-confirm" asp-action="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BoardID" />
                    <input type="hidden" id="confirm" name="confirm" value="No" />

                    <div class="form-group row">
                        <label asp-for="BoardName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="BoardName" class="form-control" />
                            <span asp-validation-for="BoardName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BoardDescription" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="BoardDescription" class="form-control"></textarea>
                            <span asp-validation-for="BoardDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <button type="submit" id="btn_submit" class="btn btn-outline-danger float-right" on><i class="fas fa-window-close"></i> Delete</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
<!-- Default card end -->
    
