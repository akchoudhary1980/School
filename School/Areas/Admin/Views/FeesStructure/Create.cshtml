@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model School.Areas.Admin.Models.FeesStructureModel
@using School.Areas.Admin.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/jquery-app/tr-staff.js"></script>

<partial name="_Breadcrumb" , model="new BreadcrumbView{PageTitle = @ViewData["PageTitle"].ToString(), ControllerName = @ViewData["ControllerName"].ToString()}" />

<div class="card card-outline card-primary mt-3">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-9">
                <h6>@ViewData["PageName"]</h6>
            </div>
            <div class="col-sm-3">
                <a asp-action="Index" class="btn btn-outline-info  float-right"><i class="fas fa-chevron-circle-left"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="ClassID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ClassID" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ClassID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Pictures" class="col-sm-2 col-form-label"></label>
                <div class="col-md-6">
                    <p>Passport Picture (Size: 250px X 350px)</p>
                    <img id="img-passport" src="~/uploadfiles/commonfile/cameraIcon.png" alt="" class="img-fluid img-thumbnail" />
                </div>
                <div class="col-md-4">
                    <input type='file' name="file_passport" onchange="uploadpassort(this);" class="btn btn-outline-info pull-right" />
                </div>
            </div>

            <h4 class="sub-title">Fees Details</h4>
            <!-- Row start -->
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="sub-title">Default</div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs  tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#product" role="tab">Fees</a>
                        </li>                        
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content tabs card-block">
                        <div class="tab-pane active" id="product" role="tabpanel">
                            <div class="row">
                                <div class="col-sm-5">
                                    <label class="form-control-label">Fees Head</label>
                                    <input type="text" id="FeesHead" name="FeesHead" class="form-control" />
                                    <input type="hidden" id="FeesHeadID" name="FeesHeadID"  />                                    
                                </div>
                                <div class="col-sm-1">
                                    <label class="form-control-label">Amount</label>
                                    <input type="text" id="FeesAmount" name="FeesAmount" class="form-control" />
                                </div>

                                <div class="col-sm-2">
                                    <label class=" form-control-label">B Cycle</label>
                                    <select class="form-control select2"> </select>                                    
                                </div>

                                <div class="col-sm-2">
                                    <label class=" form-control-label">Due On</label>
                                    <input type="text" id="DueOn" name="DueOn" class="form-control" />
                                </div>                               
                                <div class="col-sm-1">
                                    <br />
                                    <button class="btn btn-primary btn-outline-primary float-right" type="button" onclick="InsertRow('P');"><i class="icofont icofont-plus"></i></button>
                                </div>
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>
            <!-- Row end -->

            <div class='dt-responsive table-responsive'>
                <table id='dtTable' class='table table-striped table-bordered nowrap'>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product/Service</th>
                            <th>HSN/SAC</th>
                            <th>Qty</th>
                            <th>Unit</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>GST %</th>
                            <th>GST Amt</th>
                            <th>Del</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <table class='table table-striped table-bordered nowrap'>
                    <thead style="visibility:collapse">
                        <tr>
                            <th>#</th>
                            <th>Fees Head</th>
                            <th>Amount</th>
                            <th>B Cycle</th>
                            <th>DueOn</th>                           
                            <th>Del</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @*<td align="right" colspan="6"><b>Discount</b></td>

                            <td align="right"> @Html.EditorFor(model => model.DiscountPercent, new { htmlAttributes = new { @class = "form-control small-textbox" } })</td>
                            <td align="right"> @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control small-textbox" } })</td>
                            <td align="right"> @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control small-textbox", @readonly = "readonly" } })</td>
                            <td></td>*@
                        </tr>
                        <tr>
                            <td align="right" colspan="8"><b>Grand Total (Sub Total - Discount)</b></td>
                            <td align="right"><label id="GroundTotal" for="grandtotal"></label></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>

