
@using School.Areas.Admin.Models;
@model BreadcrumbView

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4 class="m-0">@Model.PageTitle</h4>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-areas="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active"><a asp-areas="Admin" asp-controller="@Model.ControllerName" asp-action="Index"> @ViewData["PageTitle"] </a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>