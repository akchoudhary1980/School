@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model School.Areas.Admission.Models.StudentModel
@using School.Areas.Admin.Models;
@{
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
}

<script src="~/jquery-app/tr-student.js"></script>
<partial name="_Breadcrumb" , model="new BreadcrumbView{PageTitle = @ViewData["PageTitle"].ToString(), ControllerName = @ViewData["ControllerName"].ToString()}" />

<div class="card card-outline card-danger">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-9">
                <h6>@ViewData["PageName"]</h6>
            </div>
            <div class="col-sm-3">
                <a asp-action="Index" class="btn btn-outline-info  float-right"><i class="fas fa-chevron-circle-left"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form class="swa-confirm" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentID" />
            <input type="hidden" id="confirm" name="confirm" value="No" />

            <div class="form-group row">
                <label asp-for="StudentCode" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="StudentCode" class="form-control" autocomplete="off" />
                    <span asp-validation-for="StudentCode" class="text-danger"></span>
                </div>
                <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                        </div>
                        <input asp-for="StudentCode" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="StudentName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="StudentName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FatherName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="FatherName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="FatherName" class="text-danger"></span>
                </div>
                <label asp-for="MotherName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="MotherName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="MotherName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CurrentAddress" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="CurrentAddress" class="form-control"></textarea>
                    <span asp-validation-for="CurrentAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-8 col-sm-4">
                    <div class="form-check float-right">
                        <input type="checkbox" class="form-check-input" id="sameaddress">
                        <label class="form-check-label" for="sameaddress">Same as Current Address</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="PermanetAddress" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="PermanetAddress" class="form-control"></textarea>
                    <span asp-validation-for="PermanetAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="State" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="State" class="form-control" autocomplete="off" />
                </div>
                <label asp-for="City" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="City" class="form-control" autocomplete="off" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Mobile" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input asp-for="Mobile" class="form-control" maxlength="10" autocomplete="off" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <label asp-for="WhatsApp" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="WhatsApp" class="form-control" maxlength="10" autocomplete="off" />
                    <span asp-validation-for="WhatsApp" class="text-danger"></span>
                </div>
                <div class="col-sm-1">
                    <div class="form-check float-right">
                        <input type="checkbox" class="form-check-input" id="samemobile">
                        <label class="form-check-label" for="samemobile">Same</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
                <div class="col-md-6">
                    <p>Passport Picture (Size: 250px X 350px)</p>
                    <img id="img-passport" src="~/uploadfiles/commonfile/cameraIcon.png" alt="" class="img-fluid img-thumbnail" />
                </div>
                <div class="col-md-4">
                    <input type='file' name="file_passport" onchange="uploadpassort(this);" class="btn btn-outline-info pull-right" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" id="btn_submit" class="btn btn-outline-danger float-right" on><i class="fas fa-window-close"></i> Delete</button>
                </div>
            </div>

        </form>
    </div>
    <div class="card-footer">
        <p>Use <i style="color:blue" class="fas fa-plus-square"></i> for Insert Record, <i style="color:green" class="fas fa-edit"></i> for Update Record and <i style="color:red" class="fas fa-window-close"></i> for Delete Record </p>
    </div>
</div>
<!-- Default card end -->
